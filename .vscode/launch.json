{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "python": "${workspaceFolder}/packages/backend/.venv/bin/python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/packages/backend/src"
            },
            "console": "integratedTerminal"
        }
    ]
}